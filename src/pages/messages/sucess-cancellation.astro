---
// filepath: c:\Users\juhee\Projects\varam\src\pages\messages\success-cancellation.astro
import Layout from '~/layouts/Layout.astro';
const metadata = {
  title: 'Booking Cancelled Successfully',
  description: 'Your message has been successfully submitted.',
};
---

<Layout metadata={metadata}>
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center px-4">
    <section
      class="max-w-lg mx-auto p-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg text-center border border-green-200 dark:border-green-700"
    >
      <div class="flex flex-col items-center gap-6">
        <!-- Success Icon -->
        <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
          <svg
            width="32"
            height="32"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="text-green-600 dark:text-green-400"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <!-- Title -->
        <h1 class="text-3xl font-bold text-green-700 dark:text-green-400">Session Cancelled</h1>

        <!-- Message -->
        <div class="text-gray-700 dark:text-gray-300 space-y-2">
          <p class="text-lg">Your training session has been successfully cancelled.</p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            A confirmation email has been sent to your inbox with the cancellation details.
          </p>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-3 mt-4">
          <a
            href="/account/bookings"
            class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors font-medium"
          >
            View My Bookings
          </a>
          <a
            href="/account/book-session"
            class="inline-block bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors font-medium"
          >
            Book New Session
          </a>
        </div>

        <!-- Additional Info -->
        <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-700">
          <p class="text-sm text-blue-800 dark:text-blue-300">
            <strong>Need to reschedule?</strong> You can book a new session anytime through your account dashboard.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    min-height: calc(100vh - 4rem);
  }
</style>
