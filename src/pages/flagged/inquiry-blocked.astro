---
const metadata = {
  title: 'Submission Blocked',
  description:
    'Your message was identified as spam or abusive content and has been rejected. Further attempts will be blocked, monitored, and permanently disregarded.',
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{metadata.title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-white dark:bg-black text-center flex items-center justify-center min-h-screen px-6">
    <div>
      <h1 class="text-2xl font-bold text-red-600 mb-4">{metadata.title}</h1>
      <p class="text-gray-700 dark:text-gray-300 text-base">
        {metadata.description}
      </p>
    </div>
  </body>
</html>
