---
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'All Booked Sessions' };

// Fetch data from your API route at SSR time
const endpoint = import.meta.env.DEV ? 'http://localhost:4321/api/list-bookings' : '/api/list-bookings';

const response = await fetch(endpoint);
const { classes = [], error } = await response.json();
---

<Layout metadata={metadata}>
  <section class="max-w-3xl mx-auto my-10 p-6 border rounded-2xl shadow space-y-6">
    <h2 class="text-2xl font-bold text-center">üìã All Booked Sessions</h2>

    {
      error ? (
        <p class="text-red-500 text-center">‚ùå Error: {error}</p>
      ) : !classes.length ? (
        <p class="text-gray-600 text-center">No sessions have been booked yet.</p>
      ) : (
        <div class="space-y-4 text-sm text-gray-800">
          {classes.map((c) => (
            <div class="border p-4 rounded shadow-sm bg-white" key={`${c.date}-${c.time}-${c.email}`}>
              <p>
                <strong>Name:</strong> {c.name}
              </p>
              <p>
                <strong>Email:</strong> {c.email}
              </p>
              <p>
                <strong>Date:</strong> {c.date}
              </p>
              <p>
                <strong>Time:</strong> {c.time}
              </p>
            </div>
          ))}
        </div>
      )
    }
  </section>
</Layout>
