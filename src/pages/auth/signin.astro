---
import Layout from '~/layouts/PageLayout.astro';
import SignInForm from '~/components/auth/SignInForm.jsx';

const metadata = {
  title: 'Sign In',
  description: 'Access your account securely.',
};
---

<Layout metadata={metadata}>
  <section class="max-w-md mx-auto py-12 px-4">
    <h1 class="text-2xl font-bold mb-4 text-center">Sign In</h1>
    <SignInForm client:only="react" />
    <div class="flex justify-between items-center mt-4 text-sm">
      <span>
        Don't have an account? <a href="/auth/signup" class="text-blue-600 underline">Sign up</a>
      </span>
      <a href="/auth/forgot-password" class="text-blue-600 underline">Forgot password?</a>
    </div>
  </section>
</Layout>
