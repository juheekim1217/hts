---
import Layout from '~/layouts/PageLayout.astro';
import ForgotPasswordForm from '~/components/auth/ForgotPasswordForm.jsx';

const metadata = {
  title: 'Forgot Password',
  description: 'Reset your password by email.',
};
---

<Layout metadata={metadata}>
  <section class="max-w-md mx-auto py-12 px-4">
    <h1 class="text-2xl font-bold mb-4 text-center">Forgot Password</h1>
    <ForgotPasswordForm client:only="react" />
    <p class="text-sm text-center mt-4">
      <a href="/auth/signin" class="text-blue-600 underline">Back to Sign In</a>
    </p>
  </section>
</Layout>
