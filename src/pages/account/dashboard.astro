---
import Layout from '~/layouts/PageLayoutProtected.astro';
import DashboardWrapper from '~/components/account/DashboardWrapper';

const metadata = { title: 'Dashboard' };
---

<Layout metadata={metadata}>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 space-y-12">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 pb-4 dark:text-white">{metadata.title}</h1>
    </div>

    <!-- 🛡️ PROTECTED WITH STORE-BASED AUTH -->
    <DashboardWrapper client:load />
  </section>
</Layout>
