---
// src/pages/account/book-session.astro
import Layout from '~/layouts/PageLayout.astro';
import BookSessionComponent from '~/components/account/BookSession.jsx';
import BookingsCalendarComponent from '~/components/account/MyBookingsCalendar.jsx';

const metadata = {
  title: 'Book Session',
};
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">{metadata.title}</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Booking Form Column -->
      <div class="order-1 lg:order-1">
        <div class="rounded-xl bg-slate-100 shadow p-4 dark:bg-gray-800">
          <h2 class="text-xl font-semibold mb-4">‚úèÔ∏è Book Your Training Session</h2>
          <BookSessionComponent client:load />
        </div>
      </div>

      <!-- Calendar Column -->
      <div class="order-2 lg:order-2">
        <div class="rounded-xl bg-slate-100 shadow p-4 dark:bg-gray-800">
          <h2 class="text-xl font-semibold mb-4">üìÖ Your Bookings</h2>
          <BookingsCalendarComponent client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
