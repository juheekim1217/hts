---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Varam Strength — A lifelong training system for strength, mobility, and real-world capability.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Trial Session',
        href: '/trial',
        target: '_blank',
        icon: 'tabler:arrow-narrow-right',
      },
      // { text: 'Watch Demo', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/running_transparent.png',
      alt: 'Superhuman Protocol Training App',
      style: 'object-fit: contain',
    }}
  >
    <Fragment slot="title">
      Built Strong, Built for Life. Varam's
      <span class="text-red-600 dark:text-red-400">Superhuman</span> Protocol
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Powered by Varamʼs adaptive Expert Engine, <span class="font-semibold">The Superhuman Protocol</span> evolves your
        workouts in real time. Minimalist sessions build power, resilience, and pain-free movement for adults, tactical professionals,
        and anyone who refuses to slow down, unlocking lifelong strength, mobility, and confidence.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Minimalist Training. Maximal Results." />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Offerings"
    title="What Varam Strength Delivers"
    subtitle="From our adaptive coaching engine to hands-on support, Varam gives you everything you need to train for life."
    items={[
      {
        title: 'The Superhuman Protocol',
        description:
          'Our adaptive Expert Engine generates daily sessions that evolve with your readiness, goals, and feedback. Minimalist by design, maximal in results.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Personal Coaching',
        description:
          'One-on-one or small-team coaching gives you precise programming, form checks, and relentless accountability so every rep moves you closer to measurable results.',
        icon: 'tabler:user-heart',
      },
      {
        title: 'Tactical Strength & Conditioning',
        description:
          'Mission-ready training for military, lawenforcement, and first-responders develops loadbearing power, agility, and durability without sacrificing recovery or job performance.',
        icon: 'tabler:shield',
      },
      {
        title: 'Sports Nutrition',
        description:
          'Evidence-based fueling and recovery plans integrate with your training data to improve performance, support body-composition goals, and extend longevity.',
        icon: 'tabler:apple',
      },
      {
        title: 'Research & Development',
        description:
          'Our performance lab runs continuous simulations and field studies, leveraging AI-driven analysis to feed every insight back into the Expert Engine and keep your training ahead of the curve.',
        icon: 'tabler:flask',
      },
      {
        title: 'Certified Coaching',
        description:
          'Sessions are led by nationally certified professionals who ensure safety, perfect technique, and ethical practice every step of your training journey.',
        icon: 'tabler:flask',
      },
    ]}
  />

