---
import Layout from '~/layouts/PageLayout.astro';

const error = Astro.url.searchParams.get('error');
---

<Layout metadata={{ title: 'Sign In' }}>
  <section class="max-w-md mx-auto my-20 text-center">
    <h1 class="text-2xl font-bold mb-4">Sign in to Varam Strength</h1>

    {error && <p class="text-red-600 mb-4">{error}</p>}

    <form method="POST" action="/api/oauth-login">
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded"> Continue with Google </button>
    </form>
  </section>
</Layout>
