---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Personal Training"
    title="Expert Coaching for Superhuman Results"
    subtitle="Personal training at Varam is powered by our adaptive Expert Engine and guided by certified coaches. This unique system, developed to optimize your full strength potential, intelligently analyzes your daily readiness to deliver personalized sessions that redefine your limits. More than training, it's a first-of-its-kind combination of human expertise and data-driven precision, unlocking your absolute best and producing measurable, extraordinary results."
    actions={[{ variant: 'primary', target: '_blank', text: 'Explore Our Training Plans', href: '/training/pricing' }]}
    image={{
      src: '~/assets/images/training.png',
      alt: 'Personal Training Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Choose Your Coaching Format"
    subtitle="All paths lead to a stronger, more capable you. Choose the coaching format that fits your needs."
    columns={3}
    items={[
      {
        title: 'In-Gym Coaching',
        description:
          'Hands-on instruction that perfects your technique, pushes you safely beyond sticking points, and unlocks faster progress than you ever thought possible.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Online Coaching',
        description:
          'Your coach delivers weekly Superhuman Protocol sessions, reviews training videos, and adjusts programming based on your feedback and progress.',
        icon: 'tabler:home-star',
      },
      {
        title: 'Program-Only Guidance',
        description: `Receive an adaptive weekly plan (PDF or app), log your sessions, and reach out to a coach only when you need support.`,
        icon: 'tabler:article',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Integrated Strength System',
        description:
          'Every session blends mobility, strongman movements, barbell lifts, and calisthenics for balanced power, resilience, and real-world capability.',
        icon: 'tabler:wand',
      },
      {
        title: 'Algorithm + Coach Sync',
        description:
          'Your coach layers real-world judgment on top of the Superhuman Protocol engine, turning data into perfectly timed progressions.',
        icon: 'tabler:settings',
      },
      {
        title: 'Technical Mastery',
        description:
          'Detailed cueing and movement drills refine every lift so you move safer, lift more, and build strength that lasts.',
        icon: 'tabler:presentation',
      },
      {
        title: 'Continuous Accountability',
        description:
          'Regular check-ins, clear goals, and tracked metrics keep you focused, consistent, and always moving forward.',
        icon: 'tabler:carousel-horizontal',
      },
    ]}
    image={{
      src: '~/assets/images/coach1.png',
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Our Coaching Works</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Accelerated Progress',
        description: 'Adaptive programming keeps your gains climbing week after week.',
        icon: 'tabler:clock',
      },
      {
        title: 'Injury Resilience',
        description:
          'Targeted mobility work paired with adaptive loading strengthens muscles, bones, and connective tissue, building full-body resilience at every stage.',
        icon: 'tabler:school',
      },
      {
        title: 'Time Efficiency',
        description: 'Focused 60-minute sessions fit any calendar without compromising results.',
        icon: 'tabler:coin',
      },
      {
        title: 'Real-World Strength',
        description: 'Strongman movements and barbell lifts build strength you can trust outside the gym.',
        icon: 'tabler:file-download',
      },
    ]}
    image={{
      src: '~/assets/images/lifting1.png',
      alt: 'Benefits Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits You'll Feel</h3>
    </Fragment>
  </Content>

