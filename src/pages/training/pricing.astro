---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Rates',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Flexible Coaching For Every Goal"
    subtitle="Pick a plan built for your training style, schedule, and budget—transparent rates, no hidden fees, cancel anytime."
  />

  <!-- Pricing Widget ******************* -->
  <section id="Prices"></section>
  <Prices
    title="Our prices"
    subtitle='Only pay for what you need & Add a discount note saying: "Preferred pricing available for military, veterans, seniors, and qualifying low-income applicants."'
    prices={[
      {
        title: 'Algorithm Plan',
        subtitle: 'Self-starters who want a proven roadmap.',
        price: 49,
        period: 'per month',
        items: [
          {
            description: 'Weekly Superhuman Protocol schedule',
          },
          {
            description: 'App or PDF delivery',
          },
          {
            description: 'Auto-adjusted loads from your logged data',
          },
          {
            description: 'Progress dashboard and habit tracker',
          },
          {
            description: 'Access to private community forum',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Coming soon',
          href: '#',
        },
        disabled: true,
      },
      {
        title: 'Online Coaching',
        subtitle: 'REmote athletes and busy professionals who NEED expert oversight.',
        price: 229,
        period: 'per month',
        items: [
          {
            description: 'All Algorithm Plan benefits',
          },
          {
            description: 'Weekly video form and movement review',
          },
          {
            description: 'Direct coach messaging with 24-hour response',
          },
          {
            description: 'Monthly live strategy call',
          },
          {
            description: 'Personalized mobility programming built into every microcycle',
          },
          {
            description: 'Discount Note: Military, veterans, and seniors save 15 %.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Coming soon',
          href: '#',
        },
        disabled: true,
      },
      {
        title: 'In-Gym Coaching Session',
        subtitle:
          'Elite performers committed to maximizing physical potential and resilience through bespoke, in-person strength, mobility, and corrective-exercise coaching.',
        price: 120,
        period: 'Per Session',
        items: [
          {
            description: 'One 60 - 75 minute session',
          },
          {
            description: 'Personalized mobility and corrective-exercise programming',
          },
          {
            description:
              'Precision guidance on every rep, dialling load and technique for maximum gains Unlimited coach messaging',
          },
          {
            description: 'Unlimited coach messaging Priority scheduling Quarterly performance assessment',
          },
          {
            description: 'Discount Note: Military, veterans and seniors save 15%.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book In-Gym Coaching Session',
          href: '/forms/trial',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'In-Gym Coaching Monthly Plan',
        subtitle:
          'Elite performers committed to maximizing physical potential and resilience through bespoke, in-person strength, mobility, and corrective-exercise coaching.',
        price: 480,
        period: 'Per Month',
        items: [
          {
            description: 'One 60 - 75 minute session each week (4-pack)',
          },
          {
            description: 'Personalized mobility and corrective-exercise programming',
          },
          {
            description:
              'Precision guidance on every rep, dialling load and technique for maximum gains Unlimited coach messaging',
          },
          {
            description: 'Unlimited coach messaging Priority scheduling Quarterly performance assessment',
          },
          {
            description: 'Discount Note: Military, veterans and seniors save 15%.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book In-Gym Coaching Monthly Plan',
          href: '/forms/trial',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Hybrid Elite',
        subtitle: 'Peak performers who demand full-spectrum coaching and total health optimisation.',
        price: 1299,
        period: 'Per Month',
        items: [
          {
            description: 'Two 60-minute in-person sessions each week',
          },
          {
            description: 'Unlimited online check-ins and program updates',
          },
          {
            description: 'Personalised mobility and corrective-exercise plans',
          },
          {
            description: 'Personalised sports nutrition programming',
          },
          {
            description: 'Weekly health-coaching consultations',
          },
          {
            description: 'Monthly performance and resilience assessment with protocol recalibration',
          },
          {
            description: 'Discount Note: Military, veterans and seniors save 15%.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Join Hybrid Elite',
          href: '/forms/trial',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="What Your Investment Delivers"
    subtitle="Every plan combines adaptive programming with high-touch expertise to maximize the return on your time, effort, and resources"
    columns={2}
    items={[
      {
        title: 'Raw Strength & Capability',
        description:
          'The Superhuman Protocolʼs adaptive Expert Engine safely boosts strength, power, and real-world stamina at any age or health status, meeting you where you are and moving you forward.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Personalised Mobility Programming',
        description:
          'Personalised mobility drills rebuild range of motion, minimise injury risk, and keep you strong, independent, and confidently moving for decades.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Corrective Exercise Programming',
        description:
          'Detailed movement assessments and targeted corrective drills resolve imbalances, refine movement patterns, and transform weak links into new strengths.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Sports Nutrition Guidnace',
        description: `Custom macro targets and fuelling strategies speed recovery, optimise body composition, and sustain high output.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Holistic Health Coaching',
        description:
          'Sleep, stress, and life-style tracking convert daily choices into long-term performance and resilience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Performance R&D Lab',
        description:
          'Our in-house Performance Lab conducts continuous simulations and field trials, feeding the latest findings into the Expert Engine so your program always reflects cutting-edge sports science.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Your Path to Superhuman Strength"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Choose a Plan: Select Algorithm, Online, In-Gym, or Hybrid Elite.',
        icon: 'tabler:number-1',
      },
      {
        title: 'Complete the Intake: Tell us your goals, equipment, schedule, and readiness metrics.',
        icon: 'tabler:number-2',
      },
      {
        title:
          'Receive Your First Microcycle: The Expert Engine builds a personalised week of training within minutes.',
        icon: 'tabler:number-3',
      },
      {
        title: 'Train & Log Feedback: Follow each session and record loads, RPE, and notes in the app or PDF.',
        icon: 'tabler:number-4',
      },
      {
        title:
          'Engine Adapts in Real Time: Your data adjusts loads, exeercise variants, and mobility work automatically.',
        icon: 'tabler:number-5',
      },
      {
        title:
          'Track Progress & Insights: Dashboards highlight gains, and coaches review your data if your plan includes guidance.',
        icon: 'tabler:number-6',
      },
      {
        title: 'Level Up Support: Renew your plan, add coaching, or upgrade to the next tier as your goals advance.',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: '~/assets/images/path.png',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Clear answers to help you choose the right Varam plan, understand our transparent pricing, and start training with confidence."
    columns={1}
    items={[
      {
        title: 'Does the algorithm Plan include coach support?',
        description:
          'The Algorithm Plan is fully self-directed. You receive a personalized Superhuman Protocol schedule (app or PDF􀀃, while direct coach support is exclusive to the Online, In-Gym, and Hybrid Elite plans.',
      },
      {
        title: 'Can I upgrade or downgrade my plan later?',
        description:
          'Yes. You can change tiers at any time. New features activate immediately, and any unused in-gym sessions roll forward for 30 days.',
      },
      {
        title: 'Are there any hidden fees?',
        description:
          'No. The subscription price you see is all-inclusive—no initiation, equipment, or cancellation fees.',
      },
      {
        title: 'How do military, veteran, and senior discounts work?',
        description:
          'During checkout, verify your status through our secure portal and the 15 % preferred rate will be applied automatically to every future bill.',
      },
      {
        title: 'Do you offer discounts for low-income individuals?',
        description:
          'Yes. Through our Strength for Life Fund we reserve a limited number of seats at up to 80 % off. Applicants submit brief income documentation once per quarter; approved spots are granted on a first-come basis.',
      },
      {
        title: 'Can I pause my subscription?',
        description:
          'You may pause any plan for up to 60 days per calendar year at no cost. Your program and data stay intact until you resume.',
      },
      {
        title: 'What is the refund policy for unused in-gym sessions?',
        description:
          'In-gym sessions are sold in 4- or 8-packs and expire eight weeks after purchase to keep progress consistent. Unused sessions are refundable within the first 14 days or transferable to another family member.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to boost your Superhuman Journey?"
    subtitle="Select your plan today and start building lifelong strength, mobility, and resilience with Varam. Flexible upgrades and no hidden fees."
    actions={[
      {
        variant: 'primary',
        text: 'Choose Your Plan',
        href: '#Prices',
      },
    ]}
  />
</Layout>
